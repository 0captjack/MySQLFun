
@{
}
@model Bowler

<style>
    div.validation-message {
        color: rgb(220,53,69);
        font-weight: 500
    }
</style>

<h3>Add Bowler Info</h3>

<form method="post" asp-controller="Home" asp-action="Edit">
    <input hidden asp-for="BowlerID" value="@Model.BowlerID" />

    <div class="form-group">
        <label asp-for="BowlerID">Bowler ID:</label>
        <input asp-for="BowlerID" class="form-control" readonly value="@Model.BowlerID" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerFirstName">First Name:</label>
        <input asp-for="BowlerFirstName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="BowlerMiddleInit">Middle Initial:</label>
        <input asp-for="BowlerMiddleInit" maxlength="1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerLastName">Last Name:</label>
        <input asp-for="BowlerLastName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="BowlerAddress">Address:</label>
        <input asp-for="BowlerAddress" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="BowlerCity">City:</label>
        <input asp-for="BowlerCity" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="BowlerState">State:</label>
        <input asp-for="BowlerState" maxlength="2" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="BowlerZip">Zip:</label>
        <input asp-for="BowlerZip" maxlength="5" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerPhoneNumber">Phone:</label>
        <input asp-for="BowlerPhoneNumber" maxlength="10" class="form-control" required />
    </div>

    <button class="btn btn-secondary" type="submit">Save</button>
    <button class="btn btn-warning" asp-action="Index">Cancel</button>

    <div asp-validation-summary="All" class="text-danger"></div> @*this checks the requirements of the model before accepting the record*@

</form>