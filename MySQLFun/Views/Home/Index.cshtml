@{
    ViewData["Title"] = "Home Page";
}
@model List<Bowler>

<h1>Bowler Roster</h1>

<table class="table table-sm table-striped table-bordered table-hover">

    <thead>
        <tr>
            <th>Bowler ID</th>
            <th>Bowler First Name</th>
            <th>Bowler Middle Initial</th>
            <th>Bowler Last Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var b in Model)
        {
        <tr>
            <td>@b.BowlerID</td>
            <td>@b.BowlerFirstName</td>
            <td>@b.BowlerMiddleInit</td>
            <td>@b.BowlerLastName</td>
            <td>@b.BowlerAddress</td>
            <td>@b.BowlerCity</td>
            <td>@b.BowlerState</td>
            <td>@b.BowlerZip</td>
            <td>@b.BowlerPhoneNumber</td>
            <td><a class="btn btn-warning" asp-controller="Home" asp-action="Edit" asp-route-bowlerid="@b.BowlerID">Edit</a></td>
            <td>
                <form method="post" asp-controller="Home" asp-action="Delete" asp-route-bowlerid="@b.BowlerID">
                    <input class="btn btn-danger" type="submit" value="Delete" />
                </form>
            </td>
        </tr>
        }
    </tbody>

</table>
